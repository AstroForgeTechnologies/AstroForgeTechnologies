{
  "extends": "astro/tsconfigs/strict",
  "include": ["src/**/*"],
  "exclude": ["*.js"],
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "paths": {
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"]
    },
    "jsxImportSource": "react"
  }
}
